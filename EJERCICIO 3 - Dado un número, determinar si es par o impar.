#Dado un número, determinar si es par o impar.
#include <iostream>
using namespace std;

int main() {
    int numero;

    cout << "Introduce un número entero: ";
    cin >> numero;

    if (numero % 2 == 0) {
        cout << "El número " << numero << " es par." << endl;
    } else {
        cout << "El número " << numero << " es impar." << endl;
    }

    return 0;
}
